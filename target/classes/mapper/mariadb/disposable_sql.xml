<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "sql">
	
	<select id = "selectDisposableTable" resultType ="java.lang.String">
		SELECT * 
		FROM disposable_table 
	</select>
	
	<select id = "select_user_main" resultType="com.kh.middle.bean.user.user_main">
		select 	*
				from user_main
	</select>
	
	<select id = "select_board_product" resultType="com.kh.middle.bean.board.product">
		select 	board_code ,
				board_category_count ,
				board_img_url ,
				board_title ,
				board_content,
				user_id
				from board b
				inner join user_main um using(user_code)
	</select>
	
	<select id="select_notice_list" resultType="com.kh.middle.notice.vo.Notice">
		select * from notice_semi
	</select>
	
	<insert id="insert_notice" parameterType="com.kh.middle.notice.vo.Notice">
		insert into notice_semi values(null, #{notice_title}, 'g', sysdate(), 0, 0, #{notice_content})
	</insert>
	
	<select id="select_notice_detail" resultType="com.kh.middle.notice.vo.Notice">
		select * from notice_semi where notice_num = #{notice_num}
	</select>
	
	
</mapper>